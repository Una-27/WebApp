<section>
    @if ((ViewBag.Id == -1) || (ViewBag.Id == 0))
    {
        <h1 class="headtext">Добавить</h1>
    }
    else
    {
        <h1 class="headtext">Редактировать</h1>
    }
    <form enctype="multipart/form-data" method="post" id="form_">
        <fieldset>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 justify-content-center align-items-center">
                        <div>
                            <small class="datenavigation">Имя*</small>
                            <input id="i1" maxlength="50" class="datainput" type="text" name="Name" placeholder="Имя" value="@ViewBag.Name" />
                            <small id="s1" class="text-danger invisible">Вы неверно ввели имя.</small>
                        </div>
                        <div>
                            <small class="datenavigation">Категория*</small>
                            <select id="i3" class="datainput" name="Category">
                                <option>Волосы</option>
                                <option>Макияж</option>
                                <option>Косметические процедуры</option>
                                <option>Брови/ресницы</option>
                                <option>Массаж</option>
                                <option>Маникюр/педикюр</option>
                                <option>Другое</option>

                            </select>
                        </div>
                        <div>
                            <small class="datenavigation">Диапазон цен*</small>
                            <input id="i3" maxlength="50" class="datainput" type="text" name="Price" placeholder="100-1000" value="@ViewBag.Price" />
                            <small id="s3" class="text-danger invisible">Вы неверно ввели имя.</small>
                        </div>
                        <div>
                            <small class="datenavigation">Диапазон времени (ч)*</small>
                            <input id="i4" maxlength="50" class="datainput" type="text" name="TimeOfWork" placeholder="0.2-3" value="@ViewBag.TimeOfWork" />
                            <small id="s4" class="text-danger invisible">Вы неверно ввели имя.</small>
                        </div>
                        <div>
                            <small class="datenavigation">Фотография</small>
                            <input id="i5" class="datainput" type="file" name="image" placeholder="Фотография" />
                            <small id="s5" class="text-danger invisible">Фотография.</small>
                        </div>
                        <div>
                            <small class="datenavigation">Информация*</small>
                            <textarea id="i6" class="datainput" name="Info" placeholder="Инфорация об услуге">@ViewBag.Info</textarea>
                            <small id="s6" class="text-danger invisible">Информация.</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 d-lg-flex justify-content-lg-center">
                        <button type="button" onclick="window.location='/Home/Master_Page'" style="width: 150px;" class="btnadd">Назад</button>
                        <input style="width: 150px;" class="btnadd" onclick="check()" name="action" type="button" value="Сохранить" />
                        <input style="width: 150px;" class="btnadd" name="action" type="submit" value="Удалить" />
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</section>



<script>

    function inputvalid(in_, type_) {
        var mis = 0;
        var letters_ = "";

        if (type_ == 0) {
            letters_ = "абвгдеёжзийклмнопрстуфхцчшщъыьэюя -";
        }
        else if (type_ == 1) {
            letters_ = "0123456789";
        }

        for (let i = 0; i < in_.length; i++) {
            for (let j = 0; j < letters_.length; j++) {
                if (in_[i].toLowerCase() == letters_[j]) {
                    mis++;
                }
            }
        }
        if ((mis == in_.length) && (in_.length > 0))
            return true;
        else
            return false;
    }

    function check() {
        var input_ = document.querySelector("#i1");
        var small_ = document.querySelector("#s1");

        if (inputvalid(input_.value, 0)) {
            let form = document.querySelector("#form_");
            form.method = 'POST';
            form.submit();
        }
        else {
            small_.classList.remove("invisible");
        }
    }
</script>
<script src="assets/bootstrap/js/bootstrap.min.js"></script>
<script src="assets/js/script.min.js"></script>